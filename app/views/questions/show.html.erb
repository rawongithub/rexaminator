<h2>Question id: <%= @question.id %></h2>
<h3>Active:</h3>
<div class="rbox">
  <p><%= @question.active %></p>
</div>

<h3>Categories:</h3>
  <div class="rbox">
    <p><%= @categories.map(&:name).join(', ') %></p>
  </div>
<h3>Body:</h3>
<div class="rbox question_body">
  <p><%=raw textilize(@question.body) %></p>
</div>

<h3>Answers:</h3>
<div id="answers" class="rbox">
  <table class="answers_go">
    <% @question.answers.each_with_index do |answer, index| -%>
      <tr>
        <td class="checkbox"><%= check_box_tag '','', answer.correct, :disabled => true %></td>
        <td class="answer"><%=raw textilize(answer.body) %></td>
      </tr>
    <% end -%>
  </table>
</div>

<% unless @question.comment=='' %>
<h3>Comment:</h3>
<div class="rbox">
  <p> <%=raw textilize(@question.comment) %> </p>
</div>
<% end %>

<%= render :partial => "feedbacks" %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Questions', questions_path %>

