<h2>Editing feedback id: <%= @feedback.id %></h2>

<%= form_for @feedback do |f| %>
  <%= f.error_messages %>

  <h3>Active</h3>
  <p> <%= f.check_box :active %> </p>

  <h3>Category:</h3>
  <div class="rbox">
    <p><%= @feedback.category %></p>
  </div>

  <h3>Body:</h3>
  <div class="rbox">
    <p><pre><%= @feedback.body %></pre></p>
  </div>

  <h3>Author:</h3>
  <div class="rbox">
    <p><%= @feedback.author %></p>
  </div>

  <h3>Created:</h3>
  <div class="rbox">
    <p><%= @feedback.created_at %></p>
  </div>

  <h3>Question ID:</h3>
  <div class="rbox">
    <p><%=link_to @feedback.question_id, question_path(@feedback.question) %></p>
  </div>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', feedbacks_path %>

